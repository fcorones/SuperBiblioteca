@page "/"
@inherits LayoutComponentBase
@using Biblioteca_Blazor_v1.Client.Components
@inject AuthContext AuthContext

<style>
    .home-container {
        padding: 2rem 1rem;
        min-height: 100vh;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .welcome-section {
        text-align: center;
        padding: 3rem 1rem;
        margin-bottom: 3rem;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        animation: fadeInUp 0.8s ease;
    }

    .welcome-title {
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #2d2d2d, #4a4a4a);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .user-greeting {
        font-size: 1.4rem;
        color: #606060;
        margin-top: 1rem;
    }

    .user-name {
        color: #2d2d2d;
        background: #f0f0f0;
        padding: 0.3rem 1rem;
        border-radius: 20px;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .carousel-section {
        margin: 2rem auto;
        max-width: 1200px;
        padding: 2rem;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .welcome-title {
            font-size: 2rem;
        }

        .user-greeting {
            font-size: 1.2rem;
        }

        .carousel-section {
            padding: 1rem;
            margin: 1rem;
        }
    }
</style>

<div class="home-container">
    <div class="welcome-section">
        <h1 class="welcome-title">Bienvenido a la Biblioteca Virtual</h1>

        @if (!string.IsNullOrEmpty(AuthContext.UserName))
        {
            <div class="user-greeting">
                ¡Hola <span class="user-name">@AuthContext.UserName</span>!
            </div>
        }
    </div>

    <div class="carousel-section">
        <BookCarousel />
    </div>
</div>

@code {
    protected override async Task OnParametersSetAsync()
    {
        await base.OnParametersSetAsync();
    }
}